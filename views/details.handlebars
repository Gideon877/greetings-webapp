    <title>Name Details</title>
</head>

<body>
     <div class="ui middle aligned center aligned container">
         <hr>

         <div class="ui piled segment">
             <div class="ui message">
                 <h2 class="ui header">
                <i class="user outline icon"></i>
                <div class="content">
                    {{user.name}}
                    {{#if messages.error}}
                        <div class="sub red header">{{messages.error}}</div>
                    {{/if}}
                </div>
            </h2>
            </div>
            <div class="ui container">
                <div class="ui icon menu" id="you can remove, compact, labeled">
                    <div class="item">
                        <a href="/"><i class="home icon"></i>Home</a>
                    </div>
                    <div class="right item">
                        <a href="/admin"><i class="cogs icon"></i>Admin</a>
                    </div>
                    <div class="item">
                        <a href="/other">
                            <i class="language icon"></i>More Languages</a>
                    </div>
                </div>
            </div>
            <hr>

            <div class="ui items">
                <div class="item" align="left">
                    <div class="image">
                        <img src="/images/user.png">
                    </div>
                    <div class="content">
                        <a class="header">Name: {{user.name}}</a>
                        <p>Greet Counter: {{user.greetCounter}}</p>
                        <div class="meta">
                            <div class="ui relaxed divided list">
                                <div class="item">
                                    <i class="large clock outline middle aligned icon"></i>
                                    <div class="content">
                                    <p><b>First Seen/Greeted</b></p>
                                    <div class="description"><b>Updated:</b> {{user.timestamp.firstGreeted}}</div>
                                    </div>
                                </div>
                                <div class="item">
                                    <i class="large clock middle aligned icon"></i>
                                    <div class="content">
                                    <p><b>Last Seen/Greeted</b></p>
                                    <div class="description"><b>Updated:</b> {{user.timestamp.lastGreeted}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="description">
                             {{!-- <i class="folder icon"></i> --}}
                            <h3 align="center"><b>Additional Details</b></h3>
                            <table class="ui unstackable table">
                                <thead>
                                    <tr>
                                        <th>Languages</th>
                                        <th>Greet Counter</th>
                                        <th class="right aligned">Last greeted time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each user.languages}}
                                    <tr>
                                    <td>
                                        <h4 class="ui image header">
                                            <i class="large {{this.flag}} outline middle aligned flag"></i>
                                            <div class="content">
                                                    <a href="#" class="list-group-item">{{this.type}}</a>
                                                {{!-- <div class="sub header">{{this.last}} --}}
                                            </div>
                                            </div>
                                        </h4>
                                    </td>
                                    <td>
                                        {{this.counter}}
                                    </td>
                                    <td class="right aligned">
                                        {{this.last}}
                                    </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <div class="extra">
                        </div>
                    </div>
                </div>
            </div>
         </div>
     </div>
</body>
