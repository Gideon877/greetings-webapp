<title>Admin Settings</title>
</head>

<body>
    <div class="ui middle aligned center aligned container">
        <hr>
        <div class="ui piled segment">
            <h4>Names</h4>
            <div class="ui container">
                <div class="ui labeled icon menu" id="you can remove, compact, labeled">
                    <div class="item">
                        <i class="users icon"></i>
                        Names
                    </div>
                    <div class="item">
                       <i class="language icon"></i>
                        <a href="/languages">Languages</a>
                    </div>
                    <div class="right item">
                        <i class="home icon"></i>
                        <a href="/">Home</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui tall stacked segment">
            <h3><u><b>List of all greeted names</b></u></h3>
            <div class="ui container">

                <div class="ui relaxed divided animated list">
                    {{#each users}}
                        <div class="item">
                            <img class="ui avatar image" src="/images/user.png">
                            <div class="content">
                                 <a href="/details/{{this.id}}" class="header">{{this.name}}</a>
                                <div class="description">Last greeted in <b>{{this.timestamp.currentLanguage}}</b> on <b>{{this.timestamp.lastGreeted}}</b>.</div>
                            </div>
                        </div>
                        <hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</body>


